<h2>Add Dish to your's <%=@restaurant.name%> </h2>

  <%= form_with(model: [@restaurant, @dish] , url: restaurant_dish_path(@restaurant, @dish), method: :put, local: true, data: { turbo: false }) do |f| %>

    <div class="form-group">
      <%= f.label :name, 'Dish Name' %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <% @dish.errors.full_messages_for(:name).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="form-group">
      <%= f.label :price, 'Price' %><br>
      <%= f.text_field :price, class: 'form-control' %>
      <% @dish.errors.full_messages_for(:price).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="form-group">
      <%= f.label :category_id, 'Category' %><br>
      <%= f.text_field :category_id, class: 'form-control' %>
      <% @dish.errors.full_messages_for(:category_id).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="row">
      <div class="small-3 columns actions ">
        <%= f.submit "Done", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>


<%= link_to "Back", :back, class: 'btn btn-secondary' %>


