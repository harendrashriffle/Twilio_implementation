<h2>Add Restaurant</h2>

  <%= form_with model: @restaurant, local: true, data: { turbo: false } do |f| %>

    <div class="form-group">
      <%= f.label :name, 'Restaurant Name' %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <% @restaurant.errors.full_messages_for(:name).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="form-group">
      <%= f.label :location, 'Location' %><br>
      <%= f.text_field :location, class: 'form-control' %>
      <% @restaurant.errors.full_messages_for(:location).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="form-group">
      <%= f.label :status, 'Status' %><br>
      <%= f.text_field :status, class: 'form-control' %>
      <% @restaurant.errors.full_messages_for(:status).each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Image' %><br>
      <%= f.file_field :image, class: 'form-control' %>
      <br>
    </div>


    <div class="row">
      <div class="small-3 columns actions ">
        <%= f.submit "Done", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>


<%= link_to "Back", restaurants_path, class: 'btn btn-secondary' %>

<%- if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, class: 'btn btn-danger' %> <br />
<% end %>
