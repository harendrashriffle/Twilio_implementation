<h2>Edit Restaurant Details</h2>

  <%= form_with(model: @restaurant, url: restaurant_path(@restaurant), method: :patch)  do |f| %>

    <div class="form-group">
      <%= f.label :name, 'Restaurant Name' %><br>
      <%= f.text_field :name, class: 'form-control' %>

      <br>
    </div>

    <div class="form-group">
      <%= f.label :location, 'Location' %><br>
      <%= f.text_field :location, class: 'form-control' %>

      <br>
    </div>

    <div class="form-group">
      <%= f.label :status, 'Status' %><br>
      <%= f.text_field :status, class: 'form-control' %>

      <br>
    </div>

    <div class="row">
      <div class="small-3 columns actions ">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    </div>


  <% end %>


<%= link_to "Back", restaurants_path, class: 'btn btn-secondary' %>
