<h1>List of Category</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Category</th>
    </tr>
  </thead>


  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Back", restaurants_path, class: 'btn btn-secondary' %>

<% if current_user.type == 'Owner' %>
  <%= link_to "Add Category", new_category_path %>
<% end %>

