<%# <style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 20px;
  }

  h1 {
    color: #333;
    text-align: center;
  }

  p {
    margin-bottom: 10px;
    color: #666;
  }

  /* Style the links */
  a {
    display: inline-block;
    padding: 8px 16px;
    text-decoration: none;
    margin-top: 10px;
    color: #fff;
    background-color: #007bff;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  a:hover {
    background-color: #0056b3;
  }
</style> %>


<div class="container mt-4">
  <h1 class="text-center mb-4">Your Profile</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <p><strong>Name:</strong> <%= current_user.name %></p>
          <p><strong>Email:</strong> <%= current_user.email %></p>
          <p><strong>Mobile:</strong> <%= current_user.mobile %></p>
          <p><strong>Address:</strong> <%= current_user.address %></p>
          <p><strong>Password:</strong> <%= current_user.password %></p>
          <p><strong>Type:</strong> <%= current_user.type %></p>
        </div>
        <div class="card-footer">
          <%= link_to "Back", restaurants_path, class: "btn btn-secondary mr-2" %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
